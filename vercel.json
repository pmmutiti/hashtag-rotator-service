{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "crons": [
    {
      "path": "/api/crons",
      "schedule": "0 10 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/kenya-trends",
      "has": [
        {
          "type": "header",
          "key": "x-vercel-ip-country",
          "value": "KE"
        }
      ],
      "destination": "/api/trends?region=kenya"
    },
    {
      "source": "/kenya-trends",
      "missing": [
        {
          "type": "header",
          "key": "x-vercel-ip-country",
          "value": "KE"
        }
      ],
      "destination": "/api/trends?region=global"
    },
    {
      "source": "/trends/:region",
      "destination": "/api/trends?region=:region"
    },
    {
      "source": "/",
      "destination": "/api/index"
    },
    {
      "source": "/meta",
      "destination": "/api/meta"
    },
    {
      "source": "/ping",
      "destination": "/api/ping"
    },
    {
      "source": "/webhook",
      "destination": "/api/github-webhook"
    },
    {
      "source": "/webhook-listener",
      "destination": "/api/webhook-listener"
    },
    {
      "source": "/scrape",
      "destination": "/api/scrape-trends24?region=kenya"
    },
    {
      "source": "/cyber-kendra",
      "destination": "/api/index?source=CyberKendra"
    },
    {
      "source": "/cyber-kendra/diagnostics",
      "destination": "/api/diagnostics?source=CyberKendra"
    },
    {
      "source": "/cyber-kendra/rotator",
      "destination": "/api/hashtag-rotator?region=kenya&source=CyberKendra"
    },
    {
      "source": "/cyber-kendra/cron",
      "destination": "/api/crons?source=CyberKendra"
    },
    {
      "source": "/cyber-kendra/github",
      "destination": "/api/github-webhook?source=CyberKendra"
    },
    {
      "source": "/cyber-kendra/trends",
      "destination": "/api/trends?region=kenya&source=CyberKendra"
    }
  ],
  "env": {
    "WEBHOOK_SECRET": "civic-rotator-override-9f3a7c2e1b6d4a8f3c1e2a7d9b5f6c3e",
    "GITHUB_WEBHOOK_SECRET": "github-rotator-verify-7e4c1d9a2f8b6e3c9a0d5b2f1c7e8a4d"
  }
}

