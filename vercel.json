{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "api/trends.js", "use": "@vercel/node" },
    { "src": "api/diagnostics.js", "use": "@vercel/node" },
    { "src": "api/rotator.js", "use": "@vercel/node" },
    { "src": "api/trends24.js", "use": "@vercel/node" },
    { "src": "api/webhook.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    {
      "source": "/trends/:region",
      "destination": "/api/trends?region=:region"
    },
    {
      "source": "/kenya-trends",
      "has": [
        {
          "type": "header",
          "key": "x-vercel-ip-country",
          "value": "KE"
        }
      ],
      "destination": "/api/trends?region=kenya"
    },
    {
      "source": "/kenya-trends",
      "destination": "/api/trends?region=global"
    },
    {
      "source": "/diagnostics",
      "destination": "/api/diagnostics"
    },
    {
      "source": "/trends24",
      "destination": "/api/trends24"
    }
  ],
  "crons": [
    {
      "path": "/api/trends24",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/rotator",
      "schedule": "*/15 * * * *"
    }
  ]
}
